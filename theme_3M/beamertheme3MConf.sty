\setbeamertemplate{footline}{
  \leavevmode\tiny%
  \begin{pgfpicture}{0.75}{0.25}{12.3cm}{0.65cm}
    \pgfputat{\pgfxy(0.75,0.25)}{\pgfbox[left,bottom]{\copyright 3M
        2010. All Rights Reserved.}}%
    \pgfputat{\pgfxy(12.3,0.25)}{\pgfbox[right,bottom]{\pgfimage[height=0.4cm]{3M-logo}}}%
  \end{pgfpicture}
}
%%%%% end footline


